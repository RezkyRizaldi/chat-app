root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,blade.php,js,css,sass,scss,xml,vue}]
indent_style = tab
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[lib/**.js]
indent_style = space
indent_size = 2

[docker-compose.yml]
indent_size = 4
